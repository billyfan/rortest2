<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>Your Pragmatic Catalog</h1>
<% if @visit_count > 5 %>
<p>oh yeah this page has been visited <%= pluralize @visit_count, 'time' %> in this session </p>
<% end %>
<% @products.each do |product| %>
  <div class="entry">
    <%= link_to image_tag(product.image_url), line_items_path(:product_id => product), :method => :post %>
    <h3><%= product.title %></h3>
    <%= sanitize(product.description) %>
    <div class="price_line">
      <span class="price"><%= number_to_currency product.price, :locale => :de %></span>
      <%= button_to 'Add to Cart', line_items_path(:product_id => product), remote: true %>
    </div>
  </div>
<% end %>